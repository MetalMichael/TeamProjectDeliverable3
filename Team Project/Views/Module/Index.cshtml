﻿@model IEnumerable<TimetableSystem.Models.Module>

@{
    ViewBag.Title = "View Modules";
}

@*<h3>Total: @Model.Count()</h3>*@
<h2>Module Page</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
    <tr>
        <th>
            ModuleCode
        </th>
        <th>
            ModuleTitle
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModuleCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModuleTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { code=item.ModuleCode }) |
            @Html.ActionLink("Details", "Details", new { code = item.ModuleCode }) |
            @Html.ActionLink("Delete", "Delete", new { code = item.ModuleCode })
        </td>
    </tr>

}
</table>
