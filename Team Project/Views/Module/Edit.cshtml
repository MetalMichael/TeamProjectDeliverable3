@model TimetableSystem.Models.Module

@{
    ViewBag.Title = "Edit Module";
}

<h2>Index</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Index", "Module", FormMethod.Post)) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit Module</legend>

        @Html.HiddenFor(model => model.ModuleID)
        @Html.HiddenFor(model => model.Department)

        <div class="editor-label">
            @Html.LabelFor(model => model.ModuleCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ModuleCode)
            @Html.ValidationMessageFor(model => model.ModuleCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModuleTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ModuleTitle)
            @Html.ValidationMessageFor(model => model.ModuleTitle)
        </div>

        <p>
            <button>Save</button> 
            <button>Reset</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
