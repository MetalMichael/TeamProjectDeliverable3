@model TimetableSystem.Models.Module

@{
    ViewBag.Title = "Edit Module";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.ModuleCode)
@Html.HiddenFor(model => model.Department)

@using (Html.BeginForm("Index", "Module", FormMethod.Post)) {
    @Html.ValidationSummary(false)

            <div class="buttons-wrapper bar">
            <div>
                @Html.ActionLink("Back", "Index", new { }, new { @class = "button" })
            </div>
            <div>
                <input type="submit" value="Save" class="button" /> 
            </div>
            <div>
                <input type="reset" value="Reset" class="button" />
            </div>
        </div>
    
    <fieldset>
        <h2>Module code</h2>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.ModuleCode)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ModuleCode, new { maxlength = "10" })
                @Html.ValidationMessageFor(model => model.ModuleCode)
            </div>
        </div>
    </fieldset>
    <fieldset>
        <h2>Module title</h2>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.ModuleTitle)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ModuleTitle, new { maxlength = "255" })
                @Html.ValidationMessageFor(model => model.ModuleTitle)
            </div>
        </div>
    </fieldset>
    <fieldset class="modulesFieldset">

    </fieldset>
}