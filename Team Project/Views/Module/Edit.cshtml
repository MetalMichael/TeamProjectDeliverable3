@model TimetableSystem.Models.Module

@{
    ViewBag.Title = "Edit Module";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.HiddenFor(model => model.ModuleID)
@Html.HiddenFor(model => model.Department)

@using (Html.BeginForm("Index", "Module", FormMethod.Post)) {
    @Html.ValidationSummary(false)
    <fieldset>
        <h2>Module code</h2>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.ModuleCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ModuleCode, new { maxlength = "10" })
                @Html.ValidationMessageFor(model => model.ModuleCode)
            </div>
        </div>
    </fieldset>
    <fieldset>
        <h2>Module title</h2>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.ModuleTitle)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ModuleTitle, new { maxlength = "255" })
                @Html.ValidationMessageFor(model => model.ModuleTitle)
            </div>
        </div>
    </fieldset>
    <fieldset class="modulesFieldset">
        <div class="field" style="border:0;">
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "button1" })
        </div>
        <div class="field" style="border:0;">
            <input type="submit" value="Save" class="button" /> 
            <input type="reset" value="Reset" class="button" />
        </div>
    </fieldset>
}