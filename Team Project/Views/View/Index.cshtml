@model IEnumerable<TimetableSystem.Models.Request>
@{
    ViewBag.Title = "Requests";
}
<h3>Your Requests</h3>

<p>
    Select from @Model.Count() requests:</p>
<table>
    <tr>
        <th>Module</th>
        <th>Day</th>
        <th>Start Time</th>
        <th>Length</th>
        <th>Weeks</th>
        <th>Rooms</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var request in Model)
    {
        <tr>
            <td>@request.Module.ModuleTitle</td>
            <td>@request.Day</td>
            <td>@request.StartTime</td>
            <td>@request.Length</td>
            <td>
                @foreach(int week in @request.Weeks)
                {
                    week.ToString();
                }
            </td>
            <td>
                @foreach (TimetableSystem.Models.RequestRoom room in request.Rooms)
                {
                    @room.Room.RoomCode;
                }
            </td>
            <td>@request.Status</td>
            <td>@Html.ActionLink("Edit", "Edit", "Home", new { id = request.RequestId }, new { target="_self" })</td>
        </tr>
    }
</table>