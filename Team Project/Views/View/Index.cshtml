@model IEnumerable<TimetableSystem.Models.Request>
@{
    ViewBag.Title = "Requests";
}
<h3>Your Requests</h3>

<p>
    Select from @Model.Count() requests:</p>
<table>
    <tr>
        <th>Module</th>
        <th>Day</th>
        <th>Start Time</th>
        <th>Length</th>
        <th>Weeks</th>
        <th>Rooms</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Module.ModuleTitle)</td>
            <td>@item.Day</td>
            <td>@item.StartTime</td>
            <td>@item.Length</td>
            <td>
                @try {
                    foreach(int week in @item.Weeks)
                    {
                        week.ToString();
                    }
                } catch(NullReferenceException ex) {
                    Html.Raw("N/A");
                }

            </td>
            <td>
                @foreach (TimetableSystem.Models.RequestRoom room in item.Rooms)
                {
                    @room.Room.RoomCode;
                }
            </td>
            <td>@item.Status</td>
            <td>@Html.ActionLink("Edit", "Edit", "Home", new { id = item.RequestId }, new { target="_self" })</td>
        </tr>
    }
</table>