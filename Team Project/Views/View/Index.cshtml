@model IEnumerable<TimetableSystem.Models.Request>
@{
    ViewBag.Title = "Requests";
}
<h3>Your Requests</h3>

<script src="@Url.Content("~/Scripts/View/index.js")" type="text/javascript"></script>

@if (ViewBag.Message != null)
{
    @ViewBag.Message
}

<p>
    Select from @Model.Count() requests:</p>
<table id="requests-table">
    <thead>
        <tr>
            <td>Module</td>
            <td>Day</td>
            <td>Start Time</td>
            <td>Length</td>
            <td>Weeks</td>
            <td>Rooms</td>
            <td>Status</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Module.ModuleTitle)</td>
            <td>@item.Day</td>
            <td>@item.StartTime:00</td>
            <td>@item.Length</td>
            <td>
                @try {
                    foreach(int week in @item.Weeks)
                    {
                        week.ToString();
                    }
                } catch(NullReferenceException) {
                    Html.Raw("N/A");
                }

            </td>
            <td>
                @foreach (TimetableSystem.Models.RequestRoom room in item.RequestRooms)
                {
                    if (room.Room != null)
                    {
                        @room.Room.RoomCode;
                    }
                }
            </td>
            <td>@item.Status</td>
            <td>@if(item.Status == "Pending") {
                    @Html.ActionLink("Edit", "Edit", "Home", new { id = item.RequestId }, new { target="_self" })
                }
            </td>
        </tr>
    }
    </tbody>
</table>