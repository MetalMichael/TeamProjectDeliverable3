@model TimetableSystem.Models.Request

@{
    ViewBag.Title = "Edit Request";
}

<h2>Index</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Home/index.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset id="s1">
        <h2>Booking</h2>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Priority)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Priority)
                @Html.ValidationMessageFor(model => model.Priority)
            </div>
        </div>
    </fieldset>
    <fieldset id="s2">
        <h2>Module</h2>
        <div class="editor-field">
            <div class="field">
                @Html.Label("Filter Module")
                <input type="text" class="filter" name="priority"></input>
            </div>
            <div class="field">
                @Html.Label("Module Title")
                @Html.DropDownList("Modules", String.Empty)
            </div>
            <div class="field">
                @Html.Label("Module Code")
                @Html.DropDownList("ModuleCodes", String.Empty)
            </div>
            <div class="field">
                <select>
                    <option id="presets">Select A Module to View Preset (what does this even do?)</option>
                </select>
            </div>
        </div>
    </fieldset>
    <fieldset id="s3">
        <h2>Weeks</h2>
        <div class="field">
            <button id="allWeeks" class="weeks">1-15</button>
            <button id="defWeeks" class="weeks">1-12</button>
            <button id="oddWeeks" class="weeks">Odd</button>
            <button id="evenWeeks" class="weeks">Even</button>
            <button id="clearWeeks">Clear</button>
        </div>
        <div class="editor-field">
            @Html.Raw(ViewBag.WeekCheckboxes)
        </div>
    </fieldset>
    <fieldset id="s4">
        <h2>Time</h2>
            <div class="field">
                @foreach (var day in ViewBag.Days)
                {
                    if (day == Model.Day)
                    {
                        @Html.RadioButtonFor(model => model.Day, (String)day, new { id = "test", Checked = "checked" });
                    }
                    else
                    {
                        @Html.RadioButtonFor(model => model.Day, (String)day, new { id = day });
                    }

                    @Html.Label((String)day)
                }
            </div>
            <div class="field">
                @Html.LabelFor(model => model.StartTime)
                @Html.DropDownList("Times", String.Empty)
            </div>
            <div class="field">
                @Html.LabelFor(model => model.Length)
                @Html.DropDownList("Lengths", String.Empty)
            </div>
    </fieldset>
    <fieldset id="s5">
        <h2>Room</h2>
        <div class="field">
            @Html.LabelFor(model => model.RoomType)
            @Html.DropDownList("RoomTypes", "Room Type")
        </div>
        <div class="field">
            <h3>Features</h3>
            @Html.EditorFor(model => model.Projector)
            @Html.LabelFor(model => model.Projector)
            @Html.EditorFor(model => model.Projector2)
            @Html.LabelFor(model => model.Projector2)
            @Html.EditorFor(model => model.OHP)
            @Html.LabelFor(model => model.OHP)
            @Html.EditorFor(model => model.Chalkboard)
            @Html.LabelFor(model => model.Chalkboard)
            @Html.EditorFor(model => model.BoardArea)
            @Html.LabelFor(model => model.BoardArea)
            @Html.EditorFor(model => model.Wheelchair)
            @Html.LabelFor(model => model.Wheelchair)
            @Html.EditorFor(model => model.Induction)
            @Html.LabelFor(model => model.Induction)
        </div>
        <div class="field">
            <input type="text" id="additional" class="filter" name="priority" placeholder="Additional Info"></input><!--Can use textarea tag to allow resize of it-->
        </div>
    </fieldset>
    <fieldset id="s6">
        <h2>Room</h2>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.StudentsTotal)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.StudentsTotal)
                @Html.ValidationMessageFor(model => model.StudentsTotal)
            </div>
        </div>
        <div class="field">
            <label for="park">No. of Rooms: </label>
            <select id="no_rooms">
                <option selected disabled>No. of Rooms</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
            </select>
        </div>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Park)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Park)
                @Html.ValidationMessageFor(model => model.Park)
            </div>
        </div>
        <div class="field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Building)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Buildings", String.Empty)
                @Html.ValidationMessageFor(model => model.Building)
            </div>
        </div>
        <div class="field">
            <div class="editor-label">
                <label>Add Room</label>
            </div>
            <div class="editor-field">
                @Html.DropDownList("Rooms", String.Empty)
            </div>
        </div>
    </fieldset>
    <fieldset id="s7">
        <div class="field">
            <button>Save Request</button>
            <input type="checkbox" id="similar" name="similar"></input>
            <label for="similar">Make Similar Request</label>
        </div>
        <div class="field">
            <button>Reset</button>
            <button>Submit</button>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
