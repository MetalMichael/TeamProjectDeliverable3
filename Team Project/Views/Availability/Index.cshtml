@model TimetableSystem.Models.BPRViewModel
@{
    ViewBag.Title = "Timetabling System - Availability";
}
<script type="text/javascript">
    $(document).ready(function () {
        refreshTable();
        $('#Park').change(function () {
            var queryLink = '@Url.Action("GetBuildings")';
            if ($(this).val() != '') {
                queryLink += '?parkID=' + $(this).index;
            }
            $.get(queryLink, function (data) {
                $b = $('#Building');
                $op = $('<option></option>');
                $b.empty();
                $.each(data, function (value) {
                    $b.append($op.attr("value", value));
                });
            });
        });
    });

    function refreshTable() {
        var days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"];
        var times = ["9:00-9:50", "10:00-10:50", "11:00-11:50", "12:00-12:50", "13:00-13:50", "14:00-14:50", "15:00-15:50",
                        "16:00-16:50", "17:00-17:50"];

        var tableHTML = "<table><tr><th><p style='text-align: center'>-</p></th>";
        
        for (var i = 0; i < 9; i++) {
            tableHTML += "<th>" + times[i] + "</th>";
        }
        tableHTML += "</tr>";

        for (var k = 0; k < 5; k++) {
            tableHTML += "<tr><th>" + days[k] + "</th>";

            for (var l = 0; l < 9; l++) {
                tableHTML += "<td class='availability'></td>"
            }
            tableHTML += "</tr>"
        }

        tableHTML += "</table>";
        $('#tableDiv').html(tableHTML);
    }

    
</script>
<h2>Availability</h2>

